@{
}

@if (!ViewBag.passverified)
{
    <h2>Passwords don't match try again</h2>
}

<h1>Add new user</h1>
<br />
<form method="POST" action="/user">
    <label>Please input username</label><br />
    <input type="text" name="username" value="@ViewBag.username"/><br />
    <label>Please input email</label><br />
    <input type="email" name="email" value="@ViewBag.email" /><br />
    <label>Please input password</label><br />
    <input type="password" name="password" /><br />
    <label>Please verify password</label><br />
    <input type="password" name="verify" /><br />
    <input type="submit" value="submit" /> <br />

</form>

